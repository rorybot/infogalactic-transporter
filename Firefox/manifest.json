{
  "manifest_version": 2,

  "name": "Infogalactic Transporter",
  "description": "This extension allows the user to move between Wiki and IG.",
  "icons": {
           "48": "./images/IW-48.png",
          "128": "./images/IW-128.png" },
  "version": "1.3",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Get me outta here!",
    "theme_icons": [{
      "light": "./images/IW-16-light.png",
      "dark": "./images/IW-16.png",
      "size": 16
    }, {
      "light": "./images/IW-48-light.png",
      "dark": "./images/IW-48.png",
      "size": 48
    }]
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ]
}
