{
  "manifest_version": 2,

  "name": "Infogalactic Transporter",
  "description": "This extension allows the user to move between Wiki and IG.",
  "icons": { "16": "./images/IW-16.png",
           "48": "./images/IW-48.png",
          "128": "./images/IW-128.png" },
  "version": "1.4",
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Get me outta here!"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ]
}
